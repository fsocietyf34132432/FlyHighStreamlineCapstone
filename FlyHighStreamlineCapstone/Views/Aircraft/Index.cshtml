@model IEnumerable<FlyHighStreamlineCapstone.ViewModel.AircraftListViewModel>

@{
    ViewData["Title"] = "Index";
}

<style>
    /* Table Styling */
    .airline-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px; /* Add some space below */
    }

        .airline-table th, .airline-table td {
            border: 1px solid #ddd; /* Light gray border */
            padding: 12px;
            text-align: left;
        }
    /* Edit Button Styling */
    .btn-edit {
        background-color: #007bff; /* Blue */
        color: white;
    }

    .airline-table th {
        background-color: #007bff; /* Blue header background */
        color: white;
    }

    /* Button Styling */
    .btn-add-flight {
        background-color: #28a745; /* Green */
        color: white;
    }

    .btn-delete {
        background-color: #dc3545; /* Red */
        color: white;
    }

</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h1>Aircraft</h1>
        </div>
        <div class="col-md-6 text-end">

            <a asp-controller="Aircraft" asp-action="Create" class="btn btn-primary">Add Aircraft</a>
        </div>
    </div>
</div>
<table class="airline-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AircraftType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AirlineName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManufactureDate)
            </th>
          
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AircraftType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManufactureDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirlineName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.AircraftId" class="btn btn-sm btn-edit">Edit</a> |

            </td>
        </tr>
}
    </tbody>
</table>
