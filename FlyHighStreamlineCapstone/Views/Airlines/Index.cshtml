@model IEnumerable<FlyHighStreamlineCapstone.Models.Airline>

@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/2.1.4/css/dataTables.dataTables.css" />



<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h1>Airlines</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Airlines" asp-action="Create" class="btn btn-primary">Add Airline</a>
        </div>
    </div>
</div>


<style>
    /* Table Styling */
    .airline-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px; /* Add some space below */
    }

        .airline-table th, .airline-table td {
            border: 1px solid #ddd; /* Light gray border */
            padding: 12px;
            text-align: left;
        }

    /* Edit Button Styling */
    .btn-edit {
        background-color: #007bff; /* Blue */
        color: white;
    }

    .airline-table th {
        background-color: #007bff; /* Blue header background */
        color: white;
    }

    /* Button Styling */
    .btn-add-flight {
        background-color: #28a745; /* Green */
        color: white;
    }

    .btn-delete {
        background-color: #dc3545; /* Red */
        color: white;
    }
</style>

<table id="airlineTable" class="table table-striped airline-table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().IATA_Code)</th>
            <th>@Html.DisplayNameFor(model => model.First().ICAO_Code)</th>
            <th>@Html.DisplayNameFor(model => model.First().Country)</th>
            <th>Action</th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem=> item.IATA_Code)</td>
                <td>@Html.DisplayFor(modelItem => item.ICAO_Code)</td>
                <td>@Html.DisplayFor(modelItem => item.Country)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AirlineId" class="btn btn-sm btn-edit">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.AirlineId" class="btn btn-sm btn-delete">Delete</a> |
                </td>
            </tr>
        }
    </tbody>
</table>


