@model IEnumerable<FlyHighStreamlineCapstone.Models.Airline>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h1>Airlines</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">Add Airline</a>
        </div>
    </div>
</div>



<style>
    /* Table Styling */
    .airline-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px; /* Add some space below */
    }

        .airline-table th, .airline-table td {
            border: 1px solid #ddd; /* Light gray border */
            padding: 12px;
            text-align: left;
        }
    /* Edit Button Styling */
    .btn-edit {
        background-color: #007bff; /* Blue */
        color: white;
    }

    .airline-table th {
        background-color: #007bff; /* Blue header background */
        color: white;
    }

    /* Button Styling */
    .btn-add-flight {
        background-color: #28a745; /* Green */
        color: white;
    }

    .btn-delete {
        background-color: #dc3545; /* Red */
        color: white;
    }
</style>
<table class="airline-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IATA_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ICAO_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IATA_Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ICAO_Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AirlineID" class="btn btn-success">Add Airline</a>
                    <a asp-action="Details" asp-route-id="@item.AirlineID" class="btn btn-edit">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.AirlineID" class="btn btn-delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

